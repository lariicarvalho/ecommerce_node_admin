<% contentFor('body') %>

<h3><a href="/marcas">Marcas</a> / Adicionar Nova Marca </h3>

<div class="row">
    <form method="POST" action="/salva_marca" class="col-lg-10">
        <div class="form-group">
            <label for="marca">Marca</label>
            <input type="text" name="marca" id="marca" class="form-control">
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea  name="descricao" id="descricao" 
            class="form-control" row="4"></textarea>
        </div>
        <div class="form-group">
            <button type="button" id="cancelar" 
            class="btn btn-raised btn-danger">Cancelar</button>
            <button type="submit" id="salvar" 
            class="btn btn-raised btn-success">Salvar</button>
        </div>
    </form>
</div>


