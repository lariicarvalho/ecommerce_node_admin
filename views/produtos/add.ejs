<% contentFor('body') %>

<h3><a href="/produtos">Produtos</a> / Adicionar Novo Produto </h3>

<div class="row">
    <form method="POST" action="/salva_produto" class="col-lg-10">
        <div class="form-group">
            <label for="produto">Produto</label>
            <input type="text" name="produto" id="produto" class="form-control">
        </div>
        <div class="form-group">
            <label for="marca">Marca</label>
            <select name="marca" id="marca" class="form-control">]
                <option value="0">Escolha a Marca</option>
            </select>
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea  name="descricao" id="descricao" class="form-control" rows="3">
            </textarea>
        </div>
        <div class="form-group">
            <label for="preco">Preço</label>
            <input type="number" name="preco" id="preco" step="any" class="form-control">
        </div>


        <div class="form-group">
            <button type="button" id="cancelar" 
            class="btn btn-raised btn-danger">Cancelar</button>
            <button type="submit" id="salvar" 
            class="btn btn-raised btn-success">Salvar</button>
        </div>

    
    </form>
</div>

<script>
    const cancelar=document.getElementById('cancelar');

    cancelar.addEventListener('click',()=>{
        window.location.href='/produtos';
    })
</script>